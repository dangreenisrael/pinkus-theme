{% if post.get_thumbnail %}
	<a href="{{post.link}}">
	<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
		{% block content %}
				<div class="blog-post">
					<div class="blog-image-container">
						<img src="{{ post.thumbnail.src | resize(400, 225) }}" srcset="
							{{ post.thumbnail.src | resize(400, 225)  | retina(1) }}  1x,
							{{ post.thumbnail.src | resize(800, 450)  | retina(2) }}  2x,
							{{ post.thumbnail.src | resize(1200, 675) | retina(3) }}  3x
							">
					</div>
					<div class="small-thumb">
						<img src="{{ post.post_author | avatar(100) }}" alt="Author avatar" class="img-responsive" srcset="
							{{ post.post_author | avatar(100) | retina(1) }} 1x,
							{{ post.post_author | avatar(200) | retina(2) }} 2x,
							{{ post.post_author | avatar(300) | retina(3) }} 3x,
							">
					</div>
					<div class="blog-container">
						<h4>{{post.title}}</h4>
						<p>
							{{post.get_preview(20, true)}}
						</p>
				</div>
			</div>
		{% endblock %}
	</article>

	</a>
{% endif %}