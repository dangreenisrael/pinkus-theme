<ul class="pagination">
    {% if pagination.prev %}
        {#<a href="" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>#}
        <li><a href="{{pagination.prev.link}}"><i class="fa fa-angle-left"></i></a></li>
    {% endif %}
        {% for page in pagination.pages %}
            <li>
                <a href="{{page.link}}" class="{{page.class}}">
                    {{page.title}}
                </a>
            </li>
        {% endfor %}
    {% if pagination.next %}
        <li><a href="{{pagination.next.link}}"><i class="fa fa-angle-right"></i></a></li>
    {% endif %}
</ul>